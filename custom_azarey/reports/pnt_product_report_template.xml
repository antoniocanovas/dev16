<?xml version='1.0' encoding='UTF-8'?>

<odoo>
    <data>

        <template id="report_product_stock">
            <tr style="border: 1px solid black;">
                <td t-attf-class="text-start" t-if="product.image_1920" class="text-right" style="padding-top: 10px; padding-bottom:10px;text-align:left;">
                    <img t-att-src="image_data_uri(product.image_1920)" style="max-height: 2cm; max-width: 3cm;margin-left:10%;"/>
                </td>
                <td><span t-field="product.name"/></td>
                <td style="text-align:justify;font-size:14px;">
                    <span t-field="product.description_sale"/>
                    <br/>
                    <!--  <span t-field="product.attribute_id"/> -->
                    <br/>
                    <!--  <span t-field="product.value_ids"/> -->
                </td>
                <td style="text-align:center;"><span t-field="product.purchased_product_qty"/></td>
                <td style="text-align:center;"><span t-field="product.qty_available"/></td>
                <td style="text-align:center;"><span t-field="product.sales_count"/></td>
                <td style="text-align:center;">
                    <t t-set="disponible" t-value="product.purchased_product_qty - product.sales_count"/>
                    <span t-out="disponible"/>
                </td>
            </tr>
        </template>

        <template id="report_task1x2">
            <t t-set="table_style" t-value="'width:200mm;height:100mm;' + table_style"/>
            <td>
                <div class="o_label_full" t-att-style="table_style">
                    <div class="o_label_name">
                        <strong t-field="task.name"/>
                        <t t-if="task.outfit">
                            <span class="text-nowrap" style="color:red;" t-field="task.outfit"/>
                        </t>
                    </div>
                    <div class="o_label_data">
                        <div class="text-center o_label_left_column">

                            <t t-if="task.displayed_image_id.datas">
                                <img t-att-src="image_data_uri(task.displayed_image_id.datas)" style="margin-left:15%;margin-top:5%;max-height:250px"/>
                            </t>
                        </div>
                    </div>
                </div>
            </td>
        </template>
        <template id="product_stock_report_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <div class="page">
                    <p style="text-align:center;font-weight: 500;width: 100%;line-height: 15px;font-size:30px">
                        STOCKS REPORT
                    </p>
                   <table class="table-border" style="width:100%; border: 1px solid black;  border-collapse: collapse;">
                            <thead style="background-color: #D0D0D0;">
                                 <tr style="border: 3pt solid;">
                                    <th style="padding-top: 10px; padding-bottom:10px;" t-attf-class="text-center"><span>Image</span></th>
                                    <th t-attf-class="text-start"><span>Model</span></th>
                                    <th t-attf-class="text-start"><span>Description</span></th>
                                    <th t-attf-class="text-start"><span>Bought</span></th>
                                    <th t-attf-class="text-start"><span>Warehouse</span></th>
                                    <th t-attf-class="text-start"><span>Sold</span></th>
                                     <th t-attf-class="text-start"><span>Avaiable</span></th>
                                </tr>
                            </thead>
                        <tbody>
                            <t t-foreach="o.pnt_product_tmpl_ids" t-as="line">
                                <tr>
                                    <td t-attf-class="text-start"  t-if="line.image_1920" class="text-right"
                                        style="padding-top: 10px; padding-bottom:10px;text-align:left;">
                                        <img t-att-src="image_data_uri(line.image_1920)" style="margin-left:120px;max-height: 1cm; max-width: 2cm;"/>
                                    </td>
                                    <td t-attf-class="text-start" style="font-weight: 500;font-size:10px">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td t-attf-class="text-start" style="font-weight: 500;font-size:10px">
                                        <span t-field="line.list_price"/><span>/Pair</span>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>

        <template id="product_multi_report">
            <div class="page">
                <t t-call="web.html_container">
                    <t t-if="report == 'stock'">
                        <t t-set="report_to_call" t-value="'custom_azarey.report_product_stock'"/>
                        <table class="table-border" style="width:100%; border: 1px solid black;  border-collapse: collapse;">
                            <thead style="background-color: #D0D0D0;">
                                <tr style="border-bottom:3pt solid ;border-top:3pt solid;">
                                    <th style="padding-top: 10px; padding-bottom:10px;" t-attf-class="text-center"><span>Image</span></th>
                                    <th t-attf-class="text-start"><span>Model</span></th>
                                    <th t-attf-class="text-start"><span>Description</span></th>
                                    <th t-attf-class="text-start"><span>Bought</span></th>
                                    <th t-attf-class="text-start"><span>Warehouse</span></th>
                                    <th t-attf-class="text-start"><span>Sold</span></th>
                                    <th t-attf-class="text-start"><span>Avaiable</span></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="i" t-value="0"/>
                                <t t-foreach="range(product_number)" t-as="row">
                                    <tr>
                                        <t t-set="product" t-value="products[i]"/>
                                        <t t-set="i" t-value="i+1"/>
                                        <t t-call="{{report_to_call}}"/>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </t>
            </div>
        </template>

        <template id="product_multi_reportv">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-call="custom_azarey.product_multi_report_document">
                        <t t-set="products" t-value="products"/>
                    </t>
                </div>
            </t>
        </template>

    </data>
</odoo>