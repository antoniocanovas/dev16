<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    # 1. Estado reservado para poder gestionar ventas sin albar√°n y competencias de tiendas:
    <record id="sale_order_custom_azarey" model="ir.ui.view">
        <field name="name">AZAREY Custom Sale Order</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Nuevo estado en sale.order RESERVATION: -->
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,sent,reservation,sale</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_reservation" states="draft,sent" type="object" string="Reservation" data-hotkey="r"/>
            </xpath>

        </field>
        <field name="priority">99</field>
    </record>

</odoo>
