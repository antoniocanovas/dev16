<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="sale_order_azarey_inh_tree" model="ir.ui.view">
        <field name="name">sale.order.azarey.inh.tree</field>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="pairs_count" optional="show"/>
            </field>
        </field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="model">sale.order</field>
        <field name="active" eval="True"/>
        <field name="priority">99</field>
        <field name="type">tree</field>
    </record>

    <record id="sale_order_azarey_inh_form" model="ir.ui.view">
        <field name="name">sale.order.azarey.inh.form</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="pairs_count" optional="show"/>
            </xpath>
            <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                <field name="pairs_count"/>
            </xpath>
        </field>
    </record>

</odoo>
