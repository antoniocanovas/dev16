<?xml version='1.0' encoding='UTF-8'?>
<odoo>

     <record id="action_open_product_report_multi_layout" model="ir.actions.act_window">
        <field name="name">Choose Product Report</field>
        <field name="res_model">product.report.wizard</field>
        <field name="view_ids"
                eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'form', 'view_id': ref('custom_azarey.product_report_wizard_view')})]" />
        <field name="target">new</field>
    </record>

    <record id="product_product_azarey_inh_tree" model="ir.ui.view">
        <field name="name">product.product.azarey.inh.tree</field>
        <field name="model">product.product</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="priority">90</field>
        <field name="arch" type="xml">

            <xpath expr="//tree/header" position="inside">
                                <button string="Print Reports" type="object" name="action_open_product_report_multi_layout"/>

            </xpath>

        </field>
    </record>
    <record id="product_product_sale_azarey_inh_form" model="ir.ui.view">
        <field name="name">product.product.sale.azarey.inh.form</field>
        <field name="model">product.product</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.product_form_view_sale_order_button"/>
        <field name="priority">90</field>
        <field name="arch" type="xml">

            <xpath expr="//notebook" position="inside">
                <page name="sale_order_lines" string="Sale order lines">
                    <field name="pnt_sale_line_ids" nolabel="1" colspan="4">
                        <tree>
                            <field name="order_id"/>
                            <field name="salesman_id"/>
                            <field name="product_uom_qty"/>
                            <field name="create_date" widget="date"/>
                            <field name="state"/>
                        </tree>
                    </field>
                    <button class="oe_highlight" type="object" string="Sale lines as notes"
                            name="delete_product_archived_in_sale_line"
                            attrs="{'invisible':[('pnt_sale_line_ids','=',[])]}"/>
                </page>
            </xpath>

        </field>
    </record>

</odoo>
