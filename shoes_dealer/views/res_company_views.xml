<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_company_product_attribute_auto_bom_inh_form" model="ir.ui.view">
        <field name="name">res.company.product.attribute.auto.bom</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website']" position="after">
                <group name="company_shoes_dealer_group" string="Shoes dealer">
                    <field name="bom_attribute_id" domain="[('create_variant','!=','no_variant')]"/>
                    <field name="size_attribute_id" domain="[('create_variant','!=','no_variant')]"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
