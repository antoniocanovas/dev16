<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="product_template_shoes_dealer_inh_form" model="ir.ui.view">
        <field name="name">product.shoes.dealer</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="priority">90</field>
        <field name="arch" type="xml">

            <xpath expr="//header" position="inside">
                <button name="create_single_products" string="Create Pairs" type="object"
                        icon="fa-tasks" class="oe_stat_button"
                        attrs="{'invisible': False}"
                        groups="sales_team.group_sale_salesman_all_leads">
                </button>
            </xpath>
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block" attrs="{'invisible':[('product_tmpl_single_hide','=',True)]}">
                    <label for="product_tmpl_single_id"/>
                    <field name="product_tmpl_single_id"/>
                    <field name="product_tmpl_single_hide" invisible="1"/>
                </span>
                <span class="d-inline-block" attrs="{'invisible':[('product_tmpl_set_hide','=',True)]}">
                    <label for="product_tmpl_set_id"/>
                    <field name="product_tmpl_set_id"/>
                    <field name="product_tmpl_set_hide" invisible="1"/>
                </span>
            </xpath>

        </field>
    </record>


</odoo>
