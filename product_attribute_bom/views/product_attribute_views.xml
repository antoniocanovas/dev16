<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_attribute_bom_inh_form" model="ir.ui.view">
        <field name="name">product.attribute.bom.inh.form</field>
        <field name="model">product.attribute</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='value_ids']/tree/field[@name='is_custom']" position="after">
                <field name="set_template_id" attrs="{'invisible':[('company_attribute_bom_id','!=',active_id)]}"/>
                <field name="company_attribute_bom_id" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
